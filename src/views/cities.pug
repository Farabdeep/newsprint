extends layout.pug 

include nav.pug  // Include the nav.pug file

block head
    link(rel="stylesheet", href="/cities.css")

block content
    +navigation() // Use the navigation mixin
    h2 Cities 
    table
        thead 
            th.Country Country
            th.city Cities
            th.number population
        tbody
            for row in rows
                tr
                    td #{row.CountryCode}
                    td #{row.Name}
                    td #{row.Population}
